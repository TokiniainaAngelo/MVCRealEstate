@page "{id:int}"
@model MVCRealEstate.Pages.admin.owners.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Détail de l'agence";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1>Détail du Propriétaire</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
<div class="row" style="margin-bottom:20px;display:flex">
    <div class="col-md-8"></div>
    <div class="col-md-4" style="display:flex;flex-direction:row;align-items:center;justify-content:space-between">
        <a asp-page="./Edit" asp-route-id="@Model.OwnerInfo.OwnerInfoId" class="btn btn-primary mr-2">Modifier</a>

        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.OwnerInfo.OwnerInfoId" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette offre?');">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
        <a asp-page="./Index" class="btn btn-secondary mr-2">Retour à la liste</a>
    </div>
</div>
<div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Prénom:</strong> @Model.OwnerInfo.FirstName</li>
        <li class="list-group-item"><strong>Nom:</strong> @Model.OwnerInfo.LastName</li>
        <li class="list-group-item"><strong>Email:</strong> @Model.OwnerInfo.Email</li>
        <li class="list-group-item"><strong>Adresse:</strong> @Model.OwnerInfo.Address</li>
        <li class="list-group-item">
            <strong>Téléphones:</strong>
            <ul class="list-unstyled">
                @foreach (var phone in Model.OwnerInfo.Phones)
                {
                    <li>@phone</li>
                }
            </ul>
        </li>
    </ul>
</div>