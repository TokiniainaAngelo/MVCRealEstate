@page "{id:int}"
@model MVCRealEstate.Pages.admin.owners.DetailModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Détail de l'agence";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1>Détail du Propriétaire</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<div>
    <h2>@Model.OwnerInfo.FullName</h2>
    <p>Prénom: @Model.OwnerInfo.FirstName</p>
    <p>Nom: @Model.OwnerInfo.LastName</p>
    <p>Email: @Model.OwnerInfo.Email</p>
    <p>Adresse: @Model.OwnerInfo.Address</p>
    <p>
        Téléphones:
        @foreach (var phone in Model.OwnerInfo.Phones)
        {
            <div>@phone</div>
        }
    </p>
    <p>
        <a asp-page="./Edit" asp-route-id="@Model.OwnerInfo.OwnerInfoId" class="btn btn-primary">Modifier</a>
        <a asp-page="./Index" class="btn btn-secondary">Retour à la liste</a>
        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.OwnerInfo.OwnerInfoId" style="display:inline;">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
    </p>
</div>