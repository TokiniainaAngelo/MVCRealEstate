@page
@model MVCRealEstate.Pages.admin.owners.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Ajouter une agence";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1>Créer un Propriétaire</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="OwnerInfo.FirstName"></label>
        <input asp-for="OwnerInfo.FirstName" class="form-control" />
        <span asp-validation-for="OwnerInfo.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerInfo.LastName"></label>
        <input asp-for="OwnerInfo.LastName" class="form-control" />
        <span asp-validation-for="OwnerInfo.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerInfo.Email"></label>
        <input asp-for="OwnerInfo.Email" class="form-control" />
        <span asp-validation-for="OwnerInfo.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerInfo.Address"></label>
        <input asp-for="OwnerInfo.Address" class="form-control" />
        <span asp-validation-for="OwnerInfo.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerInfo.Phones"></label>
        <input asp-for="OwnerInfo.Phones" class="form-control" placeholder="Séparez les numéros par une virgule" />
        <span asp-validation-for="OwnerInfo.Phones" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-page="./Index" class="btn btn-secondary">Annuler</a>
</form>