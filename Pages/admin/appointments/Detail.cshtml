@page "{id:int?}"
@model MVCRealEstate.Pages.admin.appointments.DetailModel
@using MVCRealEstate.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewData["Title"] ="Détail du Rendez-vous";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1>Détails du Rendez-vous</h1>

<div class="row">
    <p class="col-sm-3">ID du Rendez-vous</p>
    <p class="col-sm-9">@Model.Appointment.AppointmentId</p>

    <p class="col-sm-3">Utilisateur</p>
    <p class="col-sm-9">@Model.Appointment.User?.FullName</p>

    <p class="col-sm-3">Offre</p>
    <p class="col-sm-9">@Model.Appointment.Offer?.Reference</p>

    <p class="col-sm-3">Période</p>
    <p class="col-sm-9">@Model.Appointment.Period.ToString("dd/MM/yyyy HH:mm")</p>

    <p class="col-sm-3">Réservé</p>
    <p class="col-sm-9">@(Model.Appointment.IsBooked ? "Oui" : "Non")</p>
</div>

<div class="row">
    <a asp-page="./Index" class="btn btn-secondary">Retour à la liste</a>
    @if (!Model.Appointment.IsBooked)
    {
        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Appointment.AppointmentId">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
    }
</di>