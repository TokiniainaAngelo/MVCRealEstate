@page "{id:int}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MVCRealEstate.Pages.admin.offers.DetailModel
@{
	ViewData["Title"] = "Détail de l'offre";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<h1>Détails de l'Offre</h1>

<div>
    <h2>@Model.Offer.Reference</h2>
    <p>Type: @Model.Offer.Type</p>
    <p>Prix: @Model.Offer.Price</p>
    <p>Surface: @Model.Offer.Surface</p>
    <p>Location: @Model.Offer.Location?.Address</p>
    <p>Description: @Model.Offer.Description</p>
    <p>Créé le: @Model.Offer.CreatedAt</p>
    <a asp-page="./Index" class="btn btn-secondary">Retour à la liste</a>
</div>