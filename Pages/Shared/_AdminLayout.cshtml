@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	string imageUrl = "/medias/sidebar-5.jpg";
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Backoffice</title>
	<link rel="icon" type="image/x-icon" href="~/medias/logo.jpg">
	<link href="~/admin/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/admin/sass/light-bootstrap-dashboard.css" rel="stylesheet" />
	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
	<!--     Fonts and icons     -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
</head>
<body>
	<div class="wrapper">
		<div class="sidebar" data-image="@Url.Content(imageUrl)" data-color="blue">
			<!--
				Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

				Tip 2: you can also add an image using data-image tag
			-->
			<div class="sidebar-wrapper">
				<div class="logo">
					<a asp-page="/admin/offers/Index" class="simple-text">
						Real estate agency
					</a>
				</div>
				<ul class="nav">
					<li class="nav-item">
						<a class="nav-link" asp-page="/admin/offers/Index">
							<i class="nc-icon nc-chart-pie-35"></i>
							<p>Offres</p>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-page="/admin/appointments/Index">
							<i class="nc-icon nc-chart-pie-35"></i>
							<p>Rendez-vous</p>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-page="/admin/locations/Index">
							<i class="nc-icon nc-chart-pie-35"></i>
							<p>Adresses</p>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-page="/admin/owners/Index">
							<i class="nc-icon nc-chart-pie-35"></i>
							<p>Agences</p>
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" asp-page="/admin/users/Index">
							<i class="nc-icon nc-chart-pie-35"></i>
							<p>Utilisateurs</p>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="main-panel">
			<nav style="width:100%;height:60px;background-color:white">
				<div style="width:100%;height:100%;display:flex;align-items:center;justify-content:space-between;padding:0px 20px;">
					<div>Bienvenue @Context.Session.GetString("UserLogin")</div>
					<div>
						<a class="nav-link" asp-page="/admin/Logout">Déconnexion</a>
					</div>
				</div>
			</nav>
			<div class="container-fluid" style="padding-top:25px;">
				@RenderBody()
			</div>

		</div>
	</div>
	<script src="~/admin/js/jquery.3.2.1.min.js" type="text/javascript"></script>
	<script src="~/admin/js/popper.min.js" type="text/javascript"></script>
	<script src="~/admin/js/bootstrap.min.js" type="text/javascript"></script>
	<script src="~/admin/js/bootstrap-switch.js"></script>
	<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
	<script src="~/admin/js/chartist.min.js"></script>
	<script src="~/admin/js/bootstrap-notify.js"></script>
	<script src="~/admin/js/light-bootstrap-dashboard.js?v=2.0.0" type="text/javascript"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>


