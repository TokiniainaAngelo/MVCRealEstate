@model IEnumerable<MVCRealEstate.Models.Offer>

@{
	ViewData["Title"] = "Offres";
}
<link rel="stylesheet" href="~/css/offer.css" />
<!--/ Intro Single star /-->
<section class="intro-single" style="padding:20px 0;">
	<div class="container">
		<div class="row w-100">
			<div class="col-md-12 col-lg-8">
				<div class="title-single-box">
					<h1 class="title-single">Liste des offres</h1>
				</div>
			</div>
		</div>
	</div>
</section>
<form class="search-bar" asp-controller="Offers" asp-action="Index" style="margin:20px 0;">
	<input type="text" name="search" class="form-control" placeholder="Rechercher reference,description" />
	<input type="submit" value="Rechercher" class="btn btn-success" />
</form>

<section class="property-grid grid">
	<div class="container">
		<div class="row">
			@foreach(var item in Model)
			{
				<div class="col-md-4">
					<div class="card-box-a card-shadow">
						<div class="img-box-a">
							<img src="~/medias/property-1.jpg" alt="" class="img-a img-fluid">
						</div>
						<div class="card-overlay">
							<div class="card-overlay-a-content">
								<div class="card-header-a">
									<h2 class="card-title-a">
										<a href="#">
											@item.Reference
											<br />@item.Location.City
										</a>
									</h2>
								</div>
								<div class="card-body-a">
									<div class="price-box d-flex">
										<span class="price-a">@item.Type | @item.Price Ar</span>
									</div>
									<a asp-controller="Offers" asp-action="Details" asp-route-id="@item.OfferId" class="link-a">
										Voir les details
										<span class="ion-ios-arrow-forward"></span>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</section>